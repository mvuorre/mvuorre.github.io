@online{przybylskiWhereScienceMeets2025,
  title = {Where {{Science Meets Discourse}}: {{What}} a {{Flawed Commentary}} of {{Three Papers Can Teach Us About Research}} on {{Well-Being}} in the {{Digital Age}}},
  shorttitle = {Where {{Science Meets Discourse}}},
  author = {Przybylski, Andrew and Vuorre, Matti},
